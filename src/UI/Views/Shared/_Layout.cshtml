@using Resources
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/custom_bootstrap.css">
    <title>Rasp</title>
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="d-flex padding-16 justify-content-center">
        <div class="d-flex gap-16 w-50">
            <div class="dropdown">
                <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @DataResources.Create
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">@DataResources.Building</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Faculty</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Department</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Teacher</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Discipline</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Group</a></li>
                </ul>
            </div>
            <div class="dropdown">
                <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    @DataResources.Edit
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">@DataResources.Building</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Faculty</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Department</a></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Teacher</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Discipline</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">@DataResources.Group</a></li>
                </ul>
            </div>
        </div>

        <div>
            @DataResources.ApplicationName
        </div>

        <div class="d-flex flex-row-reverse gap-16 w-50">
            <div class="dropdown">
                <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Пользователь
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">@DataResources.SignOut</a></li>
                </ul>
            </div>
            <div class="btn btn-light">
                Н
            </div>
        </div>
    </header>
    <div class="container flex-grow-1 d-flex flex-column gap-16 justify-content-center">
        @*<main role="main" class="pb-3">*@
        @await RenderSectionAsync("Body")
        @*</main>*@
    </div>

    <footer class="d-flex padding-16 justify-content-between">
        <div></div>
        <div class="d-flex flex-row-reverse">
            <div class="btn btn-light">
                @DataResources.Documentation
            </div>
            <div class="btn btn-light">
                @DataResources.Help
            </div>
        </div>
    </footer>

    <script src="~/lib/jq.js"></script>
    <script src="~/lib/script.js"></script>
    <script src="~/lib/bootstrap.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
