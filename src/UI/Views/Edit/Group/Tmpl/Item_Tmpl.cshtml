@using Domain.Api
@using Domain.Extensions
@using Domain.Persistence
@using Incoding.Web.MvcContrib
@using UI.Common.Extensions
@using (var template = Html.Incoding().Template<GetGroupsQuery.Response>())
{
    using (var each = template.ForEach())
    {
        var currentGroupIdId = nameof(Group) + each.Index();
        var addOrEditUrl = Url.Dispatcher().Query<AddOrEditGroupCommand.AsView>().AsView("~/Views/Edit/Group/AddOrEdit.cshtml").ToRelative();

        <div class="d-flex shadow gap-2 rounded p-1" role="item">
            @Html.Hidden(currentGroupIdId, each.For(r => r.Id))
            <div class="col-5 my-auto">
                <input class="form-control border-0" value="@each.For(r => r.Code)"/>
            </div>
            <div class="col-5 my-auto">
                <input class="form-control border-0" value="@each.For(r => r.DepartmentCode)" title="@each.For(r => r.DepartmentName)"/>
            </div>
            <div class="col d-flex">
                <div class="my-auto ms-auto align-self-end">
                    <div class="btn btn-light">
                        <a href="#@($"{addOrEditUrl}&{nameof(AddOrEditGroupCommand.Id)}={each.For(r => r.Id)}")" class="material-symbols-rounded text-decoration-none">edit</a>
                    </div>

                    @(Html.When(JqueryBind.Click)
                          .Ajax(Url.Dispatcher().Push<DeleteGroupCommand>(new
                          {
                              Id = Selector.Jquery.Name(currentGroupIdId)
                          }))
                          .OnSuccess(dsl => dsl.Document.RedirectToSelf())
                          .AsHtmlAttributes(new { @class = "btn btn-light" })
                          .ToButton(@<span class="material-symbols-rounded">delete</span>))
                </div>
            </div>
        </div>
    }
}
